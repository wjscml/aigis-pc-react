@import '../../common/style/variable.styl'
.news-top
    display flex
    align-items center
    margin-bottom: 16px
    .title
      display flex
      align-items center
      flex 1
      font-size 16px
      .icon-news
        margin 0 10px
        font-size 18px
.ant-list
    border-radius: 10px
    background-color $color-light-background
    padding 10px 24px
    color #fff
    .ant-list-items
        .ant-list-item
            border-color $color-line
            &:last-child
                border-color $color-line !important
            .ant-list-item-extra
                width: 30%
                background url('./newsBg.png') no-repeat center
                background-size cover
                .col-image
                    width 100%
                    height 0
                    padding-bottom 73.3%
                    background-repeat  no-repeat
                    background-position left center
                    background-size cover
                    cursor pointer
            .ant-list-item-main
                display flex
                flex-direction column
                .ant-list-item-meta
                    .ant-list-item-meta-title
                        a
                            color $color-white
                            display: -webkit-box;
                            -webkit-line-clamp: 1;
                            -webkit-box-orient: vertical;
                            overflow: hidden;
                            outline none
                            &:hover
                                cursor pointer
                                color $color-light-blue
                    .ant-list-item-meta-description
                        color $color-text
                        display: -webkit-box;
                        -webkit-line-clamp: 3;
                        -webkit-box-orient: vertical;
                        overflow: hidden;
                .ant-list-item-action
                    margin 0
                    li
                        color $color-text
                        cursor auto
                        .ant-list-item-action-split
                            background-color $color-line
    .ant-empty-normal
        color $color-line