@import "../../common/style/variable"
.charts-algo
  display flex
  flex-wrap: wrap
  justify-content: space-between
  width: 100%
  .charts-column
    position relative
    margin-bottom 26px
    padding 24px 20px
    border-radius 10px
    background-color $color-light-background
    cursor pointer
    &:hover
      box-shadow 0 0 3px $color-blue
    .title
      margin-bottom 24px
      line-height 24px
      color #fff
    .info
      display flex
      justify-content space-between
      p
        &.center
          text-align center
        &.right
          text-align right
        span
          display block
          &.value
            margin-top 14px
            line-height 18px
            font-weight 600
            font-size 18px
            &.red
              color $color-red
          &.label
            margin-top 10px
            line-height 14px
    .tag
      display none
      position absolute
      right 20px
      top 24px
      padding 0 10px
      line-height 24px
      height 24px
      border-radius 2px
      background-color $color-blue
      color $color-white