@import '../../common/style/variable.styl'
.top-content
  display flex
  align-items center
  height 80px
  background-color $color-background
  .search-box-wrapper
    position relative
    flex 2
    margin-right 100px
    min-width 650px
    .search-result
      position absolute
      left 46px
      right 6px
      top 40px
      z-index 100
  .user-box-wrapper
    flex 1
    display flex
    flex-direction row-reverse
    align-items center
    color $color-light-purple
    .icon-mobile_fill
      position relative
      margin-right 40px
      font-size 20px
      &:hover
        .download
          display block
      .text
        margin-top 6px
        line-height: 12px
        font-size 12px
        text-align: center
        color $color-nav-text
      .download
        display none
        position absolute
        top 40px
        right -38px
        width: 96px
        height 116px
        padding 8px
        border-radius 4px
        background-color $color-blue
        box-shadow: 0 0 3px $color-background
        background-color $color-purple
        z-index 2  
        &:before
          content: ""
          position: absolute
          left: 0
          right 0
          top: -20px
          height: 20px
        .pulldown-bg
          position absolute
          width 100%
          height 6px
          top -6px
          left 0
          background url(./pulldown-bg-purple.png) no-repeat center top
    .userinfo
      position relative
      display flex
      align-items center
      .avatar
        width 40px
        height 40px
        border-radius 50%
      .name
        min-width 56px
        margin 0 20px
      &:hover
        .user-pulldown
          display block
      .user-pulldown
        display none
        position absolute
        width 96px
        top 50px
        right 10px
        padding 6px 0
        border-radius 4px
        background-color $color-blue
        box-shadow: 0 0 3px $color-background
        z-index 2
        &:before
          content: ""
          position: absolute
          left: -40px
          right 0
          top: -20px
          height: 20px
        ul
          li
            line-height 32px
            cursor pointer
            text-align center
            color $color-white
            &:hover
              background-color $color-dark-blue
        .pulldown-bg
          position absolute
          width 100%
          height 6px
          top -6px
          left 0
          background url(./pulldown-bg.png) no-repeat center top